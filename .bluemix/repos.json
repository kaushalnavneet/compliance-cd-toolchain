{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "messages": {
       "$i18n": "locales.yml"
    },
    "title": {
        "$ref": "#/messages/repos.title"
    },
    "description": {
        "$ref": "#/messages/repos.description"
    },
    "longDescription": {
        "$ref": "#/messages/repos.longDescription"
    },
    "type": "object",
    "properties": {
        "app-repo": {
            "description": {
                "$ref": "#/messages/repos.applicationRepoDescription"
            },
            "type": "string",
            "pattern": "\\S"
        },
        "incident-issues-repo": {
            "description": {
                "$ref": "#/messages/repos.incidentIssuesRepoDescription"
            },
            "type": "string",
            "pattern": "\\S"
        },
        "evidence-locker-repo": {
            "description": {
                "$ref": "#/messages/repos.evidenceLockerRepoDescription"
            },
            "type": "string",
            "pattern": "\\S"
        },
        "inventory-repo": {
            "description": {
                "$ref": "#/messages/repos.inventoryRepoDescription"
            },
            "type": "string",
            "pattern": "\\S"
        }
    },
    "required": [
        "app-repo",
        "incident-issues-repo",
        "evidence-locker-repo",
        "inventory-repo"
    ],
    "form": [
        {
            "type": "validator",
            "url": "/devops/setup/bm-helper/custom_github_helper.html"
        },
        {
            "type": "table",
            "columnCount": 2,
            "widths": [
                "22%",
                "78%"
            ],
            "items": [
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/repos.applicationRepoTitle"
                    }
                },
                {
                    "title": {
                        "$ref": "#/messages/repos.applicationRepoTitle"
                    },
                    "key": "app-repo",
                    "type": "text",
                    "readonly": false
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/repos.incidentIssuesRepoTitle"
                    }
                },
                {
                    "title": {
                        "$ref": "#/messages/repos.incidentIssuesRepoTitle"
                    },
                    "key": "incident-issues-repo",
                    "type": "text",
                    "readonly": false
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/repos.evidenceLockerRepoTitle"
                    }
                },
                {
                    "title": {
                        "$ref": "#/messages/repos.evidenceLockerRepoTitle"
                    },
                    "key": "evidence-locker-repo",
                    "type": "text",
                    "readonly": false
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/repos.inventoryRepoTitle"
                    }
                },
                {
                    "title": {
                        "$ref": "#/messages/repos.inventoryRepoTitle"
                    },
                    "key": "inventory-repo",
                    "type": "text",
                    "readonly": false
                }
            ]
        }
    ]
}
