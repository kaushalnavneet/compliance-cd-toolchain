{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "messages": {
      "$i18n": "locales.yml"
  },
  "title": {
    "$ref": "#/messages/servicenow.title"
  },
  "description": {
    "$ref": "#/messages/servicenow.description"
  },
  "longDescription": {
    "$ref": "#/messages/servicenow.longDescription"
  },
  "type": "object",
  "properties": {
    "api-token": {
      "description": {
        "$ref": "#/messages/servicenow.apitokenDescription"
      },
      "type": "string",
      "pattern": "\\S"
    },
    "api-url": {
      "description": {
        "$ref": "#/messages/servicenow.apiUrlDescription"
      },
      "type": "string",
      "pattern": "\\S"
    },
    "changerequest-id": {
      "description": {
        "$ref": "#/messages/servicenow.crIdDescription"
      },
      "type": "string",
      "pattern": "\\S"
    }    
  },
  "required": [
    "api-token",
    "changerequest-id"
  ],
  "form": [
    {
      "title": {
        "$ref": "#/messages/servicenow.apitokenTitle"
      },
      "key": "api-token",
      "type": "password",
      "readonly": false
    },
    {
      "type": "table",
      "columnCount": 1,
      "widths": ["100%"],
      "items": [
        {
          "type": "label",
          "title": {
            "$ref": "#/messages/servicenow.apitokenHelp"
          }
        }
      ]
    },
    {
      "title": {
        "$ref": "#/messages/servicenow.initialCrTitle"
      },
      "key": "changerequest-id",
      "type": "text",
      "readonly": false
    },
    {
      "type": "table",
      "columnCount": 1,
      "widths": ["100%"],
      "items": [
        {
          "type": "label",
          "title": {
            "$ref": "#/messages/servicenow.initialCrHelp"
          }
        }
      ]
    },    
    {
      "title": {
        "$ref": "#/messages/servicenow.apiUrlTitle"
      },      
      "key": "api-url",
      "type": "text",
      "readonly": false
    },
    {
      "type": "table",
      "columnCount": 1,
      "widths": ["100%"],
      "items": [
        {
          "type": "label",
          "title": {
            "$ref": "#/messages/servicenow.apiUrlHelp"
          }
        }
      ]
    }
  ]
}