{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "messages": {
    "$i18n": "locales.yml"
  },
  "title": {
    "$ref": "#/messages/doiToolchain.title"
  },
  "description": {
    "$ref": "#/messages/doiToolchain.description"
  },
  "longDescription": {
    "$ref": "#/messages/doiToolchain.longDescription"
  },
  "type": "object",
  "properties": {
    "doi-toolchain-id": {
      "description": {
        "$ref": "#/messages/doiToolchain.idDescription"
      },
      "type": "string",
      "pattern": "\\S"
    },
    "doi-environment": {
      "description": {
        "$ref": "#/messages/doiToolchain.envDescription"
      }
    }
  },
  "required": [
    "doi-toolchain-id"
  ],
  "form": [
    {
      "type": "table",
      "columnCount": 1,
      "widths": ["100%"],
      "items": [
        {
          "type": "info",
          "text": {
            "$ref": "#/messages/doiToolchain.help"
          }
        }
      ]
    },
    {
      "title": {
        "$ref": "#/messages/doiToolchain.id"
      },
      "description": {
        "$ref": "#/messages/doiToolchain.idDescription"
      },
      "placeholder": "Toolchain placeholder ID",
      "key": "doi-toolchain-id",
      "type": "text"
    },
    {
      "title": {
        "$ref": "#/messages/doiToolchain.env"
      },
      "description": {
        "$ref": "#/messages/doiToolchain.envDescription"
      },
      "placeholder": "Target environment placeholder",
      "key": "doi-environment",
      "type": "text"
    }
  ]
}
